<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/dialog_background"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Champ de saisie pour le solde -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSolde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Solde"
            app:boxBackgroundColor="@color/dialog_background"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/button_primary"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/button_primary"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSolde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Boutons radio pour le type de compte -->
        <RadioGroup
            android:id="@+id/typeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tilSolde">

            <!-- Bouton radio pour le type COURANT -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioCourant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="12dp"
                android:text="COURANT"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                app:buttonTint="@color/button_primary" />

            <!-- Bouton radio pour le type EPARGNE -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioEpargne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="EPARGNE"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                app:buttonTint="@color/button_primary" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
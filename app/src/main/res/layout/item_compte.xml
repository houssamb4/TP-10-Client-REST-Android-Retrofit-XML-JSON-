<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/card_gradient_background"
    android:orientation="vertical"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- ID du compte - petit texte blanc en haut à gauche -->
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Solde du compte - texte blanc large et gras -->
        <TextView
            android:id="@+id/tvSolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Solde: 7113.18"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvId"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Type du compte - tag blanc avec texte noir -->
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Type: COURANT"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/type_tag_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSolde"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Date du compte - texte blanc petit à droite du type -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Date: 2024-11-23"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.8"
            app:layout_constraintTop_toTopOf="@id/tvType"
            app:layout_constraintBottom_toBottomOf="@id/tvType"
            app:layout_constraintStart_toEndOf="@id/tvType" />

        <!-- Bouton Edit - fond blanc avec texte noir -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Edit"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/button_edit_white"
            android:stateListAnimator="@null"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvType"
            app:layout_constraintEnd_toStartOf="@id/btnDelete" />

        <!-- Bouton Delete - fond rouge avec texte blanc -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/button_delete_red"
            android:stateListAnimator="@null"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvType"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>